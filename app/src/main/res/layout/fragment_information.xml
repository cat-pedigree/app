<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.pedigree.InformationFragment">

    <TextView
        android:id="@+id/tv_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/information"
        style="@style/title1"
        android:textColor="@color/neutral_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/cat_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_information" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/cat_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_cat_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_information" />

    <TextView
        android:id="@+id/tv_cat_breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/breed"
        app:layout_constraintStart_toStartOf="@+id/tv_cat_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cat_name" />

    <TextView
        android:id="@+id/tv_breed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/breed"
        app:layout_constraintEnd_toEndOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_cat_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/color_name"
        app:layout_constraintStart_toStartOf="@+id/tv_cat_breed"
        app:layout_constraintTop_toBottomOf="@+id/tv_cat_breed" />

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/color_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_breed"
        app:layout_constraintStart_toStartOf="@+id/tv_breed"
        app:layout_constraintTop_toBottomOf="@+id/tv_breed" />

    <TextView
        android:id="@+id/tv_cat_eye_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/eye_color"
        app:layout_constraintStart_toStartOf="@+id/tv_cat_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_cat_color" />

    <TextView
        android:id="@+id/tv_eye_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/eye_color"
        app:layout_constraintEnd_toEndOf="@+id/tv_color"
        app:layout_constraintStart_toStartOf="@+id/tv_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_color" />

    <TextView
        android:id="@+id/tv_cat_hair_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/hair_color"
        app:layout_constraintStart_toStartOf="@+id/tv_cat_eye_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_cat_eye_color" />

    <TextView
        android:id="@+id/tv_hair_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/hair_color"
        app:layout_constraintEnd_toEndOf="@+id/tv_eye_color"
        app:layout_constraintStart_toStartOf="@+id/tv_eye_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_eye_color" />

    <TextView
        android:id="@+id/tv_cat_ear_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ear_shape"
        app:layout_constraintStart_toStartOf="@+id/tv_cat_hair_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_cat_hair_color" />

    <TextView
        android:id="@+id/tv_ear_shape"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ear_shape"
        app:layout_constraintEnd_toEndOf="@+id/tv_hair_color"
        app:layout_constraintStart_toStartOf="@+id/tv_hair_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_hair_color" />

</androidx.constraintlayout.widget.ConstraintLayout>