<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_camera_bottom"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/camera" />

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/camera"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera_bottom"
        app:layout_constraintStart_toEndOf="@id/iv_camera_bottom"
        app:layout_constraintTop_toTopOf="@id/iv_camera_bottom"/>

    <ImageView
        android:id="@+id/iv_gallery_bottom"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_photo_library_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_camera_bottom"
        android:contentDescription="@string/camera" />

    <TextView
        android:id="@+id/tv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/gallery"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_gallery_bottom"
        app:layout_constraintStart_toEndOf="@id/iv_gallery_bottom"
        app:layout_constraintTop_toTopOf="@id/iv_gallery_bottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>