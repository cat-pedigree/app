<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="100dp"
    tools:keep="@layout/item_cars">

    <ImageView
        android:id="@+id/iv_photo_cat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_blue"
        android:contentDescription="@string/btn_add_cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_cat"
        style="@style/sub_headline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/cat_name"
        android:textAlignment="center"
        android:textColor="@color/neutral_90"
        app:layout_constraintEnd_toEndOf="@+id/iv_photo_cat"
        app:layout_constraintStart_toStartOf="@+id/iv_photo_cat"
        app:layout_constraintTop_toBottomOf="@id/iv_photo_cat" />

</androidx.constraintlayout.widget.ConstraintLayout>