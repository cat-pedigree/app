<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.about.AboutFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app"
            app:title="@string/about" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_general"
                style="@style/title3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/general"
                android:textColor="@color/accent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_contact"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/contact"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_general"
                app:layout_constraintTop_toBottomOf="@id/tv_general" />

            <TextView
                android:id="@+id/tv_contact_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/contact_address"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_contact"
                app:layout_constraintTop_toBottomOf="@id/tv_contact" />

            <TextView
                android:id="@+id/tv_app_version"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/app_version"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_contact_result"
                app:layout_constraintTop_toBottomOf="@id/tv_contact_result" />

            <TextView
                android:id="@+id/tv_app_version_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/app_version_result"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_app_version"
                app:layout_constraintTop_toBottomOf="@id/tv_app_version" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_contributor"
                style="@style/title3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/contributor"
                android:textColor="@color/accent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_person_one"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/bugi"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_contributor"
                app:layout_constraintTop_toBottomOf="@id/tv_contributor" />

            <TextView
                android:id="@+id/tv_person_one_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/machine_learning"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_one"
                app:layout_constraintTop_toBottomOf="@id/tv_person_one" />

            <TextView
                android:id="@+id/tv_person_two"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/zahrizhal"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_one_result"
                app:layout_constraintTop_toBottomOf="@id/tv_person_one_result" />

            <TextView
                android:id="@+id/tv_person_two_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/machine_learning"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_two"
                app:layout_constraintTop_toBottomOf="@id/tv_person_two" />

            <TextView
                android:id="@+id/tv_person_three"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/wardah"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_two_result"
                app:layout_constraintTop_toBottomOf="@id/tv_person_two_result" />

            <TextView
                android:id="@+id/tv_person_three_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/machine_learning"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_three"
                app:layout_constraintTop_toBottomOf="@id/tv_person_three" />

            <TextView
                android:id="@+id/tv_person_four"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/budi"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_three_result"
                app:layout_constraintTop_toBottomOf="@id/tv_person_three_result" />

            <TextView
                android:id="@+id/tv_person_four_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/android_developer"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_four"
                app:layout_constraintTop_toBottomOf="@id/tv_person_four" />

            <TextView
                android:id="@+id/tv_person_five"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/robi"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_four_result"
                app:layout_constraintTop_toBottomOf="@id/tv_person_four_result" />

            <TextView
                android:id="@+id/tv_person_five_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/android_developer"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_five"
                app:layout_constraintTop_toBottomOf="@id/tv_person_five" />

            <TextView
                android:id="@+id/tv_person_six"
                style="@style/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/fina"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_five_result"
                app:layout_constraintTop_toBottomOf="@id/tv_person_five_result" />

            <TextView
                android:id="@+id/tv_person_six_result"
                style="@style/heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/cloud_computing"
                android:textColor="@color/neutral_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_person_six"
                app:layout_constraintTop_toBottomOf="@id/tv_person_six" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>